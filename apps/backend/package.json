    "clean": "rimraf dist .turbo",
    "typecheck": "tsc --noEmit",
    "test": "jest"
  },
  "tsup": {
    "clean": true,
    "target": "ES2020",
    "format": [
      "cjs",
      "esm"
    ]
  },
