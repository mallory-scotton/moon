{
  "name": "@moon/search",
  "version": "1.0.0",
  "description": "Multi-indexer search engine (torrents, usenet) for Moon HTPC",
  "keywords": [
    "search"
  ],
  "author": {
    "name": "Mallory SCOTTON",
    "email": "mscotton.pro@gmail.com",
    "url": "https://github.com/mallory-scotton"
  },
  "license": "MIT",
  "homepage": "https://github.com/mallory-scotton/moon",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mallory-scotton/moon",
    "directory": "packages/core/search"
  },
  "bugs": {
    "url": "https://github.com/mallory-scotton/moon/issues"
  },
  "scripts": {
    "build": "tsup src --dts",
    "build:fast": "tsup src",
    "dev": "pnpm build:fast --watch",
    "dev:run": "tsup src --watch --onSuccess \"node dist/index.js\"",
    "start": "pnpm build && node dist/index.js",
    "start:fast": "pnpm build:fast && node dist/index.js",
    "clean": "rimraf dist .turbo",
    "typecheck": "tsc --noEmit",
    "test": "jest"
  },
  "tsup": {
    "clean": true,
    "target": "ES2020",
    "format": [
      "cjs",
      "esm"
    ]
  }
}
